@model IEnumerable<VendaCarros.Models.Carro>

@{
    ViewData["Title"] = "Comprador";
}
<h1>@ViewData["Title"]</h1>

@if(Model.Count() == 0)
{
    <p>Nenhum carro cadastrado.</p>
    
   <a class="btn btn-outline-success" asp-controller="Carrp" asp-action="Create">Adicionar</a>
} 
else 
{
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Placa</th>
                <th>Ano</th>
                <th>Modelo</th>
                <th>Marca</th>                
            </tr>
        </thead>

        <tbody>
            @foreach(var carro in Model)
            {
                <tr>
                    <td>@carro.Id</td>
                    <td>@carro.Placa</td>
                    <td>@carro.Ano</td>
                    <td>@carro.Modelo</td>
                    <td>@carro.Marca</td>
                    <td>
                        <a class="btn btn-outline-primary" asp-controller="Carro" asp-action="Show" asp-route-id="@carro.Id">Ver</a> 
                        <a class="btn btn-outline-warning" asp-controller="Carro" asp-action="Update" asp-route-id="@carro.Id">Atualizar</a>      
                        <a class="btn btn-outline-danger" asp-controller="Carro" asp-action="Delete" asp-route-id="@carro.Id">Deletar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <a class="btn btn-outline-success" asp-controller="Carro" asp-action="Create">Adicionar</a>
    
}
